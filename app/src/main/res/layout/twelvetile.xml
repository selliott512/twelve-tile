<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/rootLayout"
	android:background="#d0d0d0">
	<ProgressBar style="?android:attr/progressBarStyleHorizontal"
		android:layout_height="wrap_content" android:id="@+id/prog"
		android:layout_width="fill_parent" />
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/tiles" android:orientation="horizontal"
		android:layout_width="fill_parent">
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile0" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile1" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile2" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile3" android:typeface="monospace"
			android:layout_width="fill_parent" android:layout_weight="1"
			android:textSize="24dip" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile4" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile5" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile6" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile7" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile8" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile9" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile10" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />
		<org.selliott.twelvetile.Tile android:layout_height="wrap_content"
			android:id="@+id/tile11" android:typeface="monospace"
			android:textSize="24dip" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#ffffff" />

	</LinearLayout>



	<TextView android:layout_width="wrap_content" android:id="@+id/spacer1TextView"
		android:layout_height="fill_parent" android:layout_weight="1"
		android:text=" "></TextView>
	<LinearLayout android:id="@+id/controlLayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/moveLayout" android:layout_width="fill_parent"
			android:layout_weight="1" android:orientation="vertical">
			<TextView android:layout_height="wrap_content" android:text=" Moves"
				android:id="@+id/moveTextView" android:textSize="20sp"
				android:textColor="#000000" android:layout_width="fill_parent"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/spacer4TextView"></TextView>
			<Button android:layout_height="wrap_content" android:text="Flip"
				android:layout_width="fill_parent" android:layout_weight="1"
				android:id="@+id/move1Button"></Button>
			<Button android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_weight="1"
				android:text="Merge" android:id="@+id/move2Button"></Button>


			<Button android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_weight="1"
				android:text="Undo" android:id="@+id/undoButton"></Button>

		</LinearLayout>
		<TextView android:layout_height="wrap_content" android:id="@+id/spacer2TextView"
			android:layout_width="fill_parent" android:layout_weight="1"></TextView>
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/actionLayout" android:layout_width="fill_parent"
			android:layout_weight="1" android:orientation="vertical">
			<TextView android:layout_height="wrap_content" android:id="@+id/actionTextView"
				android:text="Actions " android:textSize="20sp" android:textColor="#000000"
				android:layout_width="fill_parent" android:gravity="right"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/spacer3TextView"></TextView>
			<Button android:layout_height="wrap_content"
				android:layout_weight="1" android:layout_width="fill_parent"
				android:text="Random" android:id="@+id/randomButton"></Button>
			<Button android:layout_height="wrap_content"
				android:layout_weight="1" android:layout_width="fill_parent"
				android:text="Reset" android:id="@+id/resetButton"></Button>

			<Button android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_weight="1"
				android:id="@+id/rewindButton" android:text="Rewind"></Button>
		</LinearLayout>

	</LinearLayout>
</LinearLayout>
